generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Companies {
  id        Int     @id @default(autoincrement())
  name      String
  location  String
  email     String  @unique
  marketcap Int?
  website   String? @unique
  telephone Int    @unique
  jobs      Jobs[]
}

model Jobs {
  id             Int       @id @default(autoincrement())
  jobPosition    String
  education      String?
  TOEIC          Float?
  GPAX           Float?
  salary         Float?
  jobrequirement String
  availablecount Int
  companies      Companies @relation(fields: [companyID], references: [id])
  companyID      Int
}


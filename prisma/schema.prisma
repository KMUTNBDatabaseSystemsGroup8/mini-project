generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // provider = "mongodb"
  url      = env("POSGRES_URL")
}

// model to postgresql
model companies {
  id            Int @id @default(autoincrement())
  company_name  String
  location      String
  email         String  @unique
  marketcap     String?
  website       String?
  telephone     String
  jobs          jobs[]
}

model jobs {
  id              Int @id @default(autoincrement())
  jobposition     String
  education       String?
  toeic           Int?
  gpax            Float?
  availablecount  Int
  jobrequirement  String
  salary          String?
  companies       companies @relation(fields: [company_id], references: [id])
  company_id      Int
}


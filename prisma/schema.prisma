// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Companies {
  id        Int     @id @default(autoincrement())
  Name      String
  Location  String?
  Email     String  @unique
  MarketCap Int?
  Website   String? @unique
  Telephone Int?    @unique
  have      have[]
}

model Jobs {
  id             Int     @id @default(autoincrement())
  JobPosition    String?
  Education      String?
  TOEIC          Float?
  GPAX           Float?
  Salary         Float?
  JobRequirement String?
  AvailableCount Int
  have           have[]
}

model have {
  companies Companies @relation(fields: [CompanyID], references: [id])
  CompanyID Int
  jobs      Jobs      @relation(fields: [JobID], references: [id])
  JobID     Int

  @@id([CompanyID, JobID])
}

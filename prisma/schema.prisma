// model to mongodb
model companies {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  company_name  String
  location      String
  email         String
  marketcap     String?
  website       String?
  telephone     String
  jobs          jobs[]
}

model jobs {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  jobposition     String
  education       String
  toeic           Int?
  gpax            Float?
  availablecount  Int
  jobrequirement  String
  salary          String?
  company         companies?   @relation(fields: [company_id], references: [id])
  company_id      String? @db.ObjectId
}
